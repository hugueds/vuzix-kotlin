<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".activities.OperationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="CHASSI"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/text_chassi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="-------"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textSize="25sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="MODEL"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textSize="20sp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="-------- "
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/navy"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_current_operation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:text="0/0"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textSize="25sp"
            tools:ignore="NestedWeights" />


        <TextView
            android:id="@+id/text_operation_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="INSPECIONAR OS PARANAUE DOS BREGUENAITES"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="13"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textSize="20sp"
            tools:ignore="NestedWeights" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_operation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:background="#FFF"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_operation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:src="@drawable/_01" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/button_notok"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:focusable="true"
            android:text="NOT OK"
            android:visibility="invisible"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/button_ok"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:focusable="true"
            android:text="OK"
            android:visibility="invisible"
            tools:ignore="ButtonStyle" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:progress="100"
        android:progressTint="@color/lime"
        android:scaleY="5" />


</LinearLayout>